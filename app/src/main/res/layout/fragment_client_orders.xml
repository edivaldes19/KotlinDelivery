<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.client.ClientOrdersFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tlClientOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green_a700"
        app:layout_constraintBottom_toTopOf="@id/vpClientOrders"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/colorOnPrimary"
        app:tabInlineLabel="true"
        app:tabMaxWidth="0dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/colorOnPrimary"
        app:tabTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        app:tabTextColor="@color/colorOnPrimary" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpClientOrders"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tlClientOrders" />
</androidx.constraintlayout.widget.ConstraintLayout>