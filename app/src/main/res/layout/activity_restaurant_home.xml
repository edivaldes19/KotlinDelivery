<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.restaurant.home.RestaurantHomeActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/clFragmentRestaurant"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bnRestaurantHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnRestaurantHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/green_a700"
        app:itemIconTint="@color/colorOnPrimary"
        app:itemTextColor="@color/colorOnPrimary"
        app:labelVisibilityMode="selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clFragmentRestaurant"
        app:menu="@menu/bottom_navigation_menu_restaurant" />
</androidx.constraintlayout.widget.ConstraintLayout>